.container
  .col-xs-12
    = simple_form_for @fabric, url: fabric_form_part1_path, method: :put do |f|
      %strong Select Style(s):
      =f.collection_check_boxes(:styles, Style.all, :name, :name, include_hidden: false) do |style|
        .checkbox-inline
          = style.check_box + style.text
      
      = f.simple_fields_for :nave do |nave_form|
        = render partial: "naves/fields", locals: {nave_form: nave_form}
        
      = f.simple_fields_for :towers do |tower|
        = render partial: 'towers/fields', locals: {f: tower}
      .links
        = link_to_add_association 'add tower', f, :towers, partial: 'towers/fields'
        
      = f.simple_fields_for :chantry_chapels do |chantry_chapel|
        = render partial: 'chantry_chapels/fields', locals: {f: chantry_chapel}
      .links
        = link_to_add_association 'add chantry chapel', f, :chantry_chapels, partial: 'chantry_chapels/fields'

      = f.simple_fields_for :altar do |altar_form|
        = render partial: "altars/fields", locals: {altar_form: altar_form}
        
      = f.simple_fields_for :chancel do |chancel_form|
        = render partial: "chancels/fields", locals: {chancel_form: chancel_form}
      
      .btn.btn-primary
        = f.submit 'Submit'